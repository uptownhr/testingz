extends layout
block content
  .dashhead
    .dashhead-titles
      h6.dashhead-subtitle Dashboards
      h2.dashhead-title Funds
    .btn-toolbar.dashhead-toolbar
      .btn-group
        a.btn.btn-primary-outline(href='/admin/fund', type='button')
          | Create New
          span.icon.icon-plus
  hr.m-t
  .flextable.table-actions
    .flextable-item.flextable-primary
      .btn-toolbar-item.input-with-icon
        input.form-control.input-block.model_search(type='text', name='search', value=search, placeholder='Search funds')
        span.icon.icon-magnifying-glass
    .flextable-item
  .table-full
    .table-responsive
      table.table(data-sort='table')
        thead
          tr
            th Name
            th Symbol
            th Asset Class
            th Created
            th Actions
        tbody
          if funds.length
            each fund in funds
              tr
                td
                  =fund.name
                td
                  =fund.symbol
                td
                  =fund.asset_class
                td
                  =moment(fund.created).format("YYYY-MM-DD")
                td
                  a.btn.btn-primary-outline.btn-sm(href=`/admin/fund/${fund._id}`)
                    | Edit
                    span.icon.icon-pencil
                  | &nbsp;
                  a.btn.btn-primary-outline.btn-sm(href=`/admin/fund/delete/${fund._id}`, data-remote='true', data-confirm='Are You Sure?')
                    | Delete
                    span.icon.icon-erase
          else
            tr
              td(colspan=7, class="text-center")
                | No users found
  .text-center
    
